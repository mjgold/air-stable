<%= erb :_header %>

<h1>Create an Account</h1>
<p>

<%= erb :_show_errors, locals: { user: user } %>

<form id='create-account-form' action='/users/new' method='post'>
  Username
  <br>
  <input type='text' name='user[username]' placeholder='MisterEd'>
  <p/>

  Email address
  <br>
  <input type='text' name='user[email]' placeholder='yourname@domain.com'>
  <p/>

  Password
  <br>
  <input type='text' name='user[password]' placeholder='Minimum 6 characters'>
  <p/>

  Confirm password
  <br>
  <input type='text' name='user[password_confirmation]' placeholder=''>
  <p/>
  <button type='submit'>Create</button>
</form>
<p>

<%= erb :_footer %>
